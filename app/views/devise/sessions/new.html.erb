<style type="text/css">
  body {
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #5d5d5d;
}
</style>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {:class => "form-signin"}) do |f| %>
    <h4 class="form-signin-heading">Please sign in</h2>
    <%= f.label :email ,class: "form-signin-heading"%><br />
    <%= f.email_field :email, autofocus: true,class: "form-control", required: true  %>
    <%= f.label :password ,class: "form-signin-heading"%><br />
    <%= f.password_field :password, autocomplete: "off" ,class: "form-control"%>
    <% if devise_mapping.rememberable? -%>
    <div class="checkbox1">    
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>     
    </div>
    <% end -%>
    <%= f.submit "Log in",class: 'btn btn-lg btn-primary btn-block' %>
      <br />

      <%= link_to "Sign UP", new_user_registration_path, class: 'btn btn-lg btn-primary btn-warning btn-block' %>

  <%end%>

</div> <!-- /container -->
<%#= render "devise/shared/links" %>
